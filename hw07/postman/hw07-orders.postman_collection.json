							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Id from env is equal to Id from response\", function () {",
							"    pm.expect(parseInt(pm.collectionVariables.get(\"id\"))).to.equal(",
